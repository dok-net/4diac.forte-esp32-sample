#include <zephyr/dt-bindings/pwm/pwm.h>
#include <dt-bindings/pinctrl/esp32-pinctrl.h>

&eth {
	status = "okay";
};

&phy {
	status = "okay";
};

&mdio {
	status = "okay";
};

&wifi {
	status = "disabled";
};

&flash0 {
	status = "okay";
	partitions {
		/* Reserve 1856kB for the application in slot 0 */
		slot0_partition: partition@10000 {
			label = "image-0";
			reg = <0x00010000 0x001d0000>;
		};

		/delete-node/ partition@110000;
		/* Reserve 1856kB for the application in slot 1 */
		slot1_partition: partition@1e0000 {
			label = "image-1";
			reg = <0x001e0000 0x001d0000>;
		};

		/delete-node/ partition@210000;
		/* Reserve 128kB for the scratch partition */
		scratch_partition: partition@3b0000 {
			   label = "image-scratch";
			   reg = <0x003b0000 0x00020000>;
		};

		/delete-node/ partition@250000;
		storage_partition: partition@3d0000 {
			label = "storage";
			reg = <0x003d0000 0x00020000>;
		};
	};
};

&adc0 {
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;

	channel@0 {
		reg = <0>;
		zephyr,gain = "ADC_GAIN_1";
		zephyr,reference = "ADC_REF_INTERNAL";
		zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
		zephyr,resolution = <12>;
	};
};

&pinctrl {
	ledc0_default:  ledc0_default {
		group1 {
			pinmux = <LEDC_CH0_GPIO33>;
			output-enable;
		};
	};
};

&ledc0 {
	pinctrl-0 = <&ledc0_default>;
	pinctrl-names = "default";
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;
	channel0@0 {
		reg = <0x0>;
		timer = <0>;
	};
};

/ {
	zephyr,user {
		io-channels =
			<&adc0 0>;
	};

   	aliases {
   		led0 = &led0;
   		sw0 = &button0;
		pwm0 = &pwm0;
   	};

   	leds {
   		compatible = "gpio-leds";
   		led0: led_0 {
   			gpios = <&gpio0 17 GPIO_ACTIVE_LOW>;
                };
   	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio0 5 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
		};
	};

	pwmleds {
		compatible = "pwm-leds";
		pwm0: pwm_led_gpio1_1 {
			pwms = <&ledc0 0 PWM_HZ(100) PWM_POLARITY_NORMAL>;
		};
	};

	fstab {
		compatible = "zephyr,fstab";
		lfs1: lfs1 {
			compatible = "zephyr,fstab,littlefs";
			mount-point = "/lfs1";
			partition = <&storage_partition>;
			automount;
			read-size = <16>;
			prog-size = <16>;
			cache-size = <64>;
			lookahead-size = <32>;
			block-cycles = <512>;
		};
	};
};

